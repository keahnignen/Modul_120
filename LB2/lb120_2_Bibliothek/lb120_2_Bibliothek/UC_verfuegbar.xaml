<UserControl x:Class="lb120_2_Bibliothek.UC_verfuegbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lb120_2_Bibliothek"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="auswahlKunde" VerticalAlignment="Top" HorizontalAlignment="Left" IsReadOnly="True" Width="350" Height="300" CanUserAddRows="False" CanUserSortColumns="True" MouseDoubleClick="auswahlKunde_MouseDoubleClick" SelectionMode="Single" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding KundeId}" Header="KundeId" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Name}" Header="Kunde Name" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Ortschaft}" Header="Ortschaft" Width="150"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
