<UserControl x:Class="lb120_2_Bibliothek.UC_Buch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lb120_2_Bibliothek"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="430" Margin="10,10,0,0" VerticalAlignment="Top" Width="627" Loaded="dataGrid_Loaded">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titel" Binding="{Binding  Titel}"/>
            </DataGrid.Columns>
        </DataGrid>
        <DatePicker HorizontalAlignment="Left" Margin="858,305,-158,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</UserControl>
