        <Label x:Name="label2_Copy1" Content="Kunde:" HorizontalAlignment="Left" Margin="29,177,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox x:Name="cbxBuch" HorizontalAlignment="Left" Margin="102,66,0,0" VerticalAlignment="Top" Width="141" IsEnabled="False"/>
        <Label x:Name="lblTitle" Content="Label" HorizontalAlignment="Left" Margin="29,10,0,0" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</UserControl>
