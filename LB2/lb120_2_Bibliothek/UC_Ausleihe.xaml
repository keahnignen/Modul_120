<UserControl x:Class="lb120_2_Bibliothek.UC_Ausleihe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lb120_2_Bibliothek"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="764.706" Loaded="UserControl_Loaded">
    <Grid >
        <DataGrid x:Name="dataGrid" IsReadOnly="True" HorizontalAlignment="Left" Height="430" Margin="10,10,0,0" VerticalAlignment="Top" Width="744" MouseDoubleClick="dataGrid_MouseDoubleClick">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Bucg Id" Binding="{Binding  Buch.BuchId}"/>
                <DataGridTextColumn Header="Buchtitel" Binding="{Binding  Buch.Titel}"/>
                <DataGridTextColumn Header="Start" Binding="{Binding  Start, StringFormat=D}"/>
                <DataGridTextColumn Header="Ende" Binding="{Binding  Ende, StringFormat=D}"/>
                <DataGridCheckBoxColumn Header="Ist Überfällig" Binding="{Binding  IstUeberfaellig, Mode=OneWay}"/>
                <DataGridCheckBoxColumn Header="Ist Verfügbar" Binding="{Binding  IstZurueck}"/>

                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
